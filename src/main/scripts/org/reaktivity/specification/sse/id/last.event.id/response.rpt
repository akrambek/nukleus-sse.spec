property newServerAcceptRef  ${nuklei:newReferenceId()} # external
property serverTransport "nukleus://target/streams/sse"

accept ${serverTransport}
  option nukleus:route  ${newServerAcceptRef}
  option nukleus:window 8192
  option nukleus:transmission "half-duplex"
accepted

read nukleus:begin.ext ${http:header(":scheme", "http")}
read nukleus:begin.ext ${http:header(":method", "GET")}
read nukleus:begin.ext ${http:header(":path", "/events/a8b7c6d5")}
read nukleus:begin.ext ${http:header(":authority", "localhost:8080")}
read nukleus:begin.ext ${http:header("accept", "text/event-stream")}
read nukleus:begin.ext ${http:header("last-event-id", "100")}

connected

read closed

write nukleus:begin.ext ${http:header("content-type", "text/event-stream")}
write nukleus:begin.ext ${http:header("cache-control", "no-cache")}

write "data:Hello, world\n"
write "id:105\n"
write "\n"
write flush
