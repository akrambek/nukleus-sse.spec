property serverConnect "nukleus://streams/target#0"

accept ${serverConnect}
       option nukleus:window 8192
       option nukleus:transmission "half-duplex"
accepted

read nukleus:begin.ext ${core:string16("/events/a8b7c6d5")} ${core:string(null)}

connected

read closed

write nukleus:data.ext 1519937168533L ${core:string(null)} [0x02] [0xc3 0x28]
write "Hello, world"
write flush

write aborted
